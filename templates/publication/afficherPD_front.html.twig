{% extends 'base_front_connecte.html.twig' %}
{% block title %}Bankiz - Publications {% endblock %}
{% block carousel %}
    <div class="section-title text-center">
        {%  for type, messages in app.flashes %}
            {%  for message in messages %}
                <div  class="alert alert-{{ type }}" role="alert">
                    {{ message }}
                </div>
            {% endfor%}
        {% endfor %}
    </div>
    <a class="fw-medium" href="{{ path('afficherP_front') }}" style="color: #ffc650;">Retour page des Articles<i class="fa fa-arrow-left ms-2"></i></a>
    <div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
        <div class="container text-center">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="section-title text-center">
                        <h1 class="display-5 mb-5"> Article Detaillé</h1>
                    </div>
                        <article>
                            <h2>{{ formPD.getTitrePublication }}</h2>
                            <h6 class="metadat">Publié  le {{ formPD.getDatePublication | date('d-m-Y') }} à {{ formPD.getDatePublication | date('H:i')}} dans la categorie
                                {{ formPD.getCategoriePublication }} par {{ formPD.getNomClient() }}</h6>
                            <div class="content">
                                <img class="img-fluid"  src="{{ asset('BackOffice/img/' ~ formPD.getImagePublication) }}"  alt="" height="500px" width="500px" >
                                <p>{{ formPD.getDescriptionPublication}}.</p>
                            </div>
                            <td><form>
                                    <a class="fw-medium" href="{{ path('modifierP_front', { id: formPD.getId  }) }}" style="color: #ffc650;" >Modifier |</a>
                                    <a class="fw-medium" href="{{ path('supprimerP_front', { id: formPD.getId  }) }}" style="color: #ffc650;" >Supprimer</a>
                                </form></td>
                        </article>
                </div>
            </div>
        </div>
    </div>
    {% include"commentaire/afficherC_front.html.twig" %}
    {% include "commentaire/ajouterC_front.html.twig" %}
{% endblock %}