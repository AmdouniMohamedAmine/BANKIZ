            </div>
        </div>

        <!-- Pending Requests Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Pending Requests</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">18</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-comments fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    //khedmti

    <h1 class="h3 mb-4 text-gray-800">crédits</h1>
    {% set i=0 %}
    {% for c in credits %}
    {% if c.decision==1 %}
        {% set i=i+1 %}
    {% endif %}
    {% endfor %}
    {% set accept_pct = i/(credits|length)*100 %}
    <div class="card-body">
        <div class="row no-gutters align-items-center">
            <div class="col mr-2">
                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">credit accepter
                </div>
                <div class="row no-gutters align-items-center">
                    <div class="col-auto">
                        <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">{{accept_pct|number_format(2)}}% acceptés </div>
    </div>
    <div class="col">
        <div class="progress progress-sm mr-2">
            <div class="progress-bar bg-info" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>
    </div>
    </div>
    <div class="col-auto">
        <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
    </div>
    </div>
    </div>
<h1>Liste des crédits</h1>

    <form method="post" action="{{ path('rechercheBytype') }}" >
        <button class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" style="height: 45px; padding: 10px 15px; ">Rechercher</button><br>
        <br></form>
    <form method="post" action="{{ path('ajoutCredit') }}" >
<button class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" style="height: 45px; padding: 10px 15px; ">Ajouter un crédit</button><br>
<br></form>
<table border="1">
    <tr>
    <th>Num crédit</th>
    <th>Montant crédit</th>
    <th>Date première échéance</th>
    <th>Date dernière échéance</th>
    <th>Duréé crédit</th>
    <th>Echéance</th>
    <th>Taux d'interet</th>
    <th>Décision</th>
    <th>Etat crédit</th>
    <th>Type crédit</th>
        <th>numCompte</th>

    <th>Supprimer</th>
    <th>Modifier</th>

    </tr>
    <tr {% for c in credits %}>
        <td>{{ c.id }}</td>
        <td>{{ c.montCredit }}</td>
        <td>{{ c.datepe |date('d-m-Y')}}</td>
        <td>{{ c.datede |date('d-m-Y')}}</td>
        <td>{{ c.dureeC }}</td>
        <td>{{ c.echeance |date('d-m-Y')}}</td>
        <td>{{ c.tauxInteret }}</td>
        <td>{{ c.decision }}</td>
        <td>{{ c.etatCredit }}</td>
        <td>{{ c.typeCredit }}</td>
        <td>{{ c.numerocompte.numcompte }}</td>



        <td><a class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" href="{{ path("suppCredit",{'id':c.id}) }}">Supprimer</a></td>
        <td><a class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" href="{{ path("modifCredit",{'id':c.id}) }}">Modifier</a></td>
    </tr {% endfor %}>
</table>
{% endblock %}